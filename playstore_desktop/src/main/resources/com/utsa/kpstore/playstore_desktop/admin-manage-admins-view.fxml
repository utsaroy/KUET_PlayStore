<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox style="-fx-background-color: #F5F5F5;" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utsa.kpstore.playstore_desktop.controllers.AdminManageAdminsController">

    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 15 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <Button fx:id="backBtn" onAction="#handleBack" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-cursor: hand;" text="← Back to Dashboard" />
        <Region HBox.hgrow="ALWAYS" />
        <Text fill="#6200EE" style="-fx-font-weight: bold;" text="Manage Administrators">
            <font>
                <Font size="22.0" />
            </font>
        </Text>
    </HBox>


    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 20 30 10 30;">
        <Button fx:id="addAdminBtn" onAction="#handleAddAdmin" style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="➕ Add New Admin" />
    </HBox>

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox spacing="20" style="-fx-padding: 20 30;">
            

            <HBox spacing="10" style="-fx-background-color: #E0E0E0; -fx-padding: 10 20; -fx-background-radius: 5 5 0 0;">
                <Label prefWidth="50" style="-fx-font-weight: bold; -fx-text-fill: #616161;" text="ID" />
                <Label prefWidth="200" style="-fx-font-weight: bold; -fx-text-fill: #616161;" text="Name" />
                <Label prefWidth="250" style="-fx-font-weight: bold; -fx-text-fill: #616161;" text="Email" />
                <Label prefWidth="100" style="-fx-font-weight: bold; -fx-text-fill: #616161;" text="Status" />
                <Label prefWidth="100" style="-fx-font-weight: bold; -fx-text-fill: #616161;" text="Action" />
            </HBox>
            

            <VBox fx:id="adminsListContainer" spacing="5" />
            
        </VBox>
    </ScrollPane>
</VBox>
