<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" style="-fx-background-color: #F5F5F5;" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utsa.kpstore.playstore_desktop.controllers.AdminHomeController">
    
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_CENTER" spacing="40" style="-fx-padding: 40;">
            
            
            <VBox alignment="CENTER" spacing="10">
                <Text fill="#6200EE" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Admin Dashboard">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Text>
                <Label fx:id="adminNameLabel" style="-fx-font-size: 16px; -fx-text-fill: #757575;" text="Welcome, Administrator" />
            </VBox>
            
            
            <HBox alignment="CENTER" spacing="30">
                <VBox alignment="CENTER" prefWidth="250" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);">
                    <Label fx:id="totalUsersLabel" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #6200EE;" text="0" />
                    <Label style="-fx-font-size: 18px; -fx-text-fill: #757575;" text="Total Users" />
                </VBox>
                
                <VBox alignment="CENTER" prefWidth="250" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);">
                    <Label fx:id="totalAppsLabel" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #FF6F00;" text="0" />
                    <Label style="-fx-font-size: 18px; -fx-text-fill: #757575;" text="Total Apps" />
                </VBox>
                
                <VBox alignment="CENTER" prefWidth="250" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);">
                    <Label fx:id="totalDownloadsLabel" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #00C853;" text="0" />
                    <Label style="-fx-font-size: 18px; -fx-text-fill: #757575;" text="Total Downloads" />
                </VBox>
            </HBox>
            

            
        </VBox>
    </ScrollPane>
</VBox>
