<VBox prefHeight="434.0" prefWidth="805.0" spacing="30" style="-fx-padding: 40;" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utsa.kpstore.playstore_desktop.controllers.DeveloperDashboardController">
    
    <VBox spacing="15">
        <Text fill="#212121" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Developer Dashboard">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Text>
    </VBox>
    
    <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);">
        <HBox alignment="CENTER_LEFT">
            <Text fill="#212121" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="My Apps">
                <font>
                    <Font name="System Bold" size="22.0" />
                </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="uploadNewAppBtn" onAction="#handleUploadNewApp" style="-fx-background-color: #6200EE; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 12 25; -fx-cursor: hand;" text="âž• Upload New App" />
        </HBox>
    </VBox>
    
    <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);">
        
        <VBox fx:id="appsContainer" spacing="15">
            <VBox spacing="15" style="-fx-background-color: #F5F5F5; -fx-background-radius: 10; -fx-padding: 20;">
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@images/logo.png" />
                    </ImageView>
                    
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Text fill="#212121" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="GPA Calculator">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Text>
                        <HBox spacing="15">
                            <Text fill="#757575" style="-fx-font-size: 13px;" text="1,234 downloads" wrappingWidth="123.38580322265625" />
                            <Text fill="#757575" style="-fx-font-size: 13px;" text="4.5 rating" />
                        </HBox>
                    </VBox>
                    
                    <VBox alignment="CENTER_RIGHT" spacing="8">
                  <HBox>
                     <children>
                        <Button fx:id="editBtn" prefHeight="34.0" prefWidth="74.0" style="-fx-background-color: #6200EE; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 20; -fx-padding: 8 15; -fx-cursor: hand;" text="Edit">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                              <Button fx:id="deleteBtn" prefHeight="34.0" prefWidth="80.0" style="-fx-background-color: #f75138EE; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 20; -fx-padding: 8 15; -fx-cursor: hand;" text="Delete" textFill="#f75138" />
                     </children>
                  </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
    
</VBox>
