<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER" style="-fx-max-width: 1200px; -fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utsa.kpstore.playstore_desktop.controllers.LoginController">
    <VBox alignment="CENTER" spacing="30" style="-fx-padding: 60; -fx-min-width: 600px;" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="15">
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@images/logo.png"/>
            </ImageView>
            <Text style="-fx-fill: white; -fx-font-size: 42px; -fx-font-weight: bold;" text="KUET PlayStore"/>
            <Text style="-fx-fill: rgba(255, 255, 255, 0.9); -fx-font-size: 18px;" text="Softwares by KUETIANS"/>
        </VBox>
        <VBox spacing="25" style="-fx-padding: 40 0 0 0;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <StackPane prefHeight="60" prefWidth="60"
                           style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 30;">
                    <Text style="-fx-font-size: 30px;" text="ðŸš€"/>
                </StackPane>
                <VBox spacing="5">
                    <Text style="-fx-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
                          text="Discover Amazing Apps"/>
                    <Text style="-fx-fill: rgba(255, 255, 255, 0.8); -fx-font-size: 14px;"
                          text="Built by talented KUET students"/>
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <StackPane prefHeight="60" prefWidth="60"
                           style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 30;">
                    <Text style="-fx-font-size: 30px;" text="ðŸŽ“"/>
                </StackPane>
                <VBox spacing="5">
                    <Text style="-fx-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
                          text="Student Community"/>
                    <Text style="-fx-fill: rgba(255, 255, 255, 0.8); -fx-font-size: 14px;"
                          text="Connect with developers across departments"/>
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <StackPane prefHeight="60" prefWidth="60"
                           style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 30;">
                    <Text style="-fx-font-size: 30px;" text="ðŸ’¡"/>
                </StackPane>
                <VBox spacing="5">
                    <Text style="-fx-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
                          text="Showcase Your Work"/>
                    <Text style="-fx-fill: rgba(255, 255, 255, 0.8); -fx-font-size: 14px;"
                          text="Share your projects with the KUET community"/>
                </VBox>
            </HBox>
        </VBox>
    </VBox>
    <VBox alignment="CENTER"
          style="-fx-background-color: rgb(175,172,211); -fx-background-radius: 30; -fx-min-width: 500px; -fx-max-width: 500px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 30, 0, 0, 10);">
        <HBox.margin>
            <Insets bottom="20.0" right="20.0" top="20.0"/>
        </HBox.margin>
        <VBox spacing="35" style="-fx-padding: 50 60;">
            <VBox alignment="CENTER" spacing="10">
                <Text fill="#9b03ff" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Login As Student"/>
                <Text fill="#5a7089" style="-fx-font-size: 14px;" text="Sign in to continue to KUET PlayStore"/>
            </VBox>
            <VBox spacing="20">
                <VBox spacing="8">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #212121;" text="Email"/>
                    <TextField fx:id="emailField" promptText="Enter your email"
                               style="-fx-background-color: #F5F5F5; -fx-background-radius: 30; -fx-padding: 15; -fx-font-size: 14px; -fx-border-color: transparent; -fx-border-radius: 10;"/>
                </VBox>
                <VBox spacing="8">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #212121;" text="Password"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password"
                                   style="-fx-background-color: #F5F5F5; -fx-background-radius: 30; -fx-padding: 15; -fx-font-size: 14px; -fx-border-color: transparent; -fx-border-radius: 10;"/>
                </VBox>
                <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLogin"
                        style="-fx-background-color: #6200EE; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 30; -fx-cursor: hand; -fx-padding: 15;"
                        text="Sign In">
                </Button>

                <!-- Divider -->
                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0;">
                    <Separator HBox.hgrow="ALWAYS"/>
                    <Text style="-fx-font-size: 12px;" text="OR"/>
                    <Separator HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Sign Up Link -->
                <HBox alignment="CENTER" spacing="5" style="-fx-padding: 15 0 0 0;">
                    <Text style="-fx-fill: #757575; -fx-font-size: 14px;" text="Don't have an account?"/>
                    <Hyperlink fx:id="signUpLink" onAction="#handleSignUp"
                               style="-fx-font-size: 14px; -fx-text-fill: #6200EE; -fx-font-weight: bold; -fx-padding: 0;"
                               text="Sign Up"/>
                </HBox>
            </VBox>

        </VBox>
    </VBox>
</HBox>
